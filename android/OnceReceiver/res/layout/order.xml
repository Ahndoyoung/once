<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/order"
            android:background="#fff4eed8">
            <TextView android:text="Order #1" android:textColor="@android:color/black" android:textSize="30sp"
                      android:gravity="center"
                      android:textAlignment="gravity" android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="sans-serif-medium" android:textStyle="italic"
                      android:id="@+id/oderNum"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView" android:layout_below="@+id/oderNum" android:layout_alignParentStart="true"
            android:layout_above="@+id/button"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>
</RelativeLayout>