<UserControl x:Class="Once_v2_2015.View.OrdersUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Once_v2_2015.View"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:cmd="http://www.galasoft.ch/mvvmlight"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="1500" Height="856"
             DataContext="{Binding OrdersVM, Source={StaticResource Locator}}">
    <Grid>
        <Grid Margin="25,25,25,26">
            <ScrollViewer x:Name="svOrders" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="PreviewMouseWheel">
                        <cmd:EventToCommand Command="{Binding HorizontalScrollingCommand}"  PassEventArgsToCommand="True"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Grid>
                    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Margin="10,10,0,38" Width="450" Background="#FFF4EED8">
                        <Grid>
                            <TextBlock x:Name="textBlock1" Margin="103,20,104,0" TextWrapping="Wrap" Text="Order #1" VerticalAlignment="Top" Foreground="#FF603A17" FontSize="29.333" FontFamily="Segoe Print" TextAlignment="Center"/>
                            <ListView x:Name="listView" Margin="32,96,32,83" SelectionMode="Single" FontSize="16" FontFamily="NanumBarunGothic" Foreground="Black" ItemContainerStyle="{StaticResource ColorfulListView}" AlternationCount="2">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Width="260" DisplayMemberBinding="{Binding }" >
                                            <GridViewColumnHeader TextElement.FontSize="16" FontFamily="Segoe UI">Name</GridViewColumnHeader>
                                        </GridViewColumn>
                                        <GridViewColumn Width="100" DisplayMemberBinding="{Binding }" >
                                            <GridViewColumnHeader TextElement.FontSize="16" FontFamily="Segoe UI">Qty</GridViewColumnHeader>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <Button x:Name="button" Style="{StaticResource BrownButton}" Content="Complete" HorizontalAlignment="Right" Margin="0,0,32,15" Width="112" FontFamily="Segoe UI" FontSize="14.667" Foreground="#FFFBFBEF" Height="56" VerticalAlignment="Bottom"/>
                            <Button x:Name="button_Copy" Style="{StaticResource IvoryButton}" Content="Modify" HorizontalAlignment="Right" Margin="0,0,149,15" VerticalAlignment="Bottom" Width="112" Height="56" FontFamily="Segoe UI" FontSize="14.667" Foreground="#FF603A17"/>
                        </Grid>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="500,10,0,38" Background="#FFF4EED8" HorizontalAlignment="Left" Width="450">
                        <Grid>
                            <TextBlock x:Name="textBlock2" Margin="103,20,104,0" TextWrapping="Wrap" Text="Order #1" VerticalAlignment="Top" Foreground="#FF603A17" FontSize="29.333" FontFamily="Segoe Print" TextAlignment="Center"/>
                            <ListView x:Name="listView1" Margin="32,96,32,83" SelectionMode="Single" FontSize="16" FontFamily="NanumBarunGothic" Foreground="Black" ItemContainerStyle="{StaticResource ColorfulListView}" AlternationCount="2">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Width="260" DisplayMemberBinding="{Binding ''}" >
                                            <GridViewColumnHeader TextElement.FontSize="16" FontFamily="Segoe UI" Content="Name"/>
                                        </GridViewColumn>
                                        <GridViewColumn Width="100" DisplayMemberBinding="{Binding ''}" >
                                            <GridViewColumnHeader TextElement.FontSize="16" FontFamily="Segoe UI" Content="Qty"/>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <Button x:Name="button1" Style="{StaticResource BrownButton}" Content="Complete" HorizontalAlignment="Right" Margin="0,0,32,15" Width="112" FontFamily="Segoe UI" FontSize="14.667" Foreground="#FFFBFBEF" Height="56" VerticalAlignment="Bottom"/>
                            <Button x:Name="button_Copy1" Style="{StaticResource IvoryButton}" Content="Modify" HorizontalAlignment="Right" Margin="0,0,149,15" VerticalAlignment="Bottom" Width="112" Height="56" FontFamily="Segoe UI" FontSize="14.667" Foreground="#FF603A17"/>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
